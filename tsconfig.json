{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "src/types",
      "./node_modules/@types",
    ]
  },
  "include": [
    "./src/**/*",
    "./src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}